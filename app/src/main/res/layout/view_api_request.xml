<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- URL and Method Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/method_spinner"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:background="@color/surface"
                android:padding="8dp" />

            <EditText
                android:id="@+id/url_input"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@color/surface"
                android:hint="https://api.example.com/endpoint"
                android:inputType="textUri"
                android:padding="8dp"
                android:textColor="@color/text"
                android:textColorHint="@color/text_secondary" />

        </LinearLayout>

        <!-- Send Button -->
        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Send Request"
            android:backgroundTint="@color/primary" />

        <!-- Headers Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Headers"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/headers_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_add_header"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="+ Add Header"
            android:textSize="12sp" />

        <!-- Body Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Body (JSON)"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/body_editor"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:background="@color/surface"
            android:fontFamily="monospace"
            android:gravity="top|start"
            android:hint="Enter JSON body"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Environment Variables Button -->
        <Button
            android:id="@+id/btn_environments"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="Environment Variables"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>
