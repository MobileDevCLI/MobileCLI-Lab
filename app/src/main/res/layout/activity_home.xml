<?xml version="1.0" encoding="utf-8"?>
<!-- MobileCLI Studio Home Screen - Room Selection -->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@color/surface_dark"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menu"
                android:tint="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="12dp" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_menu_preferences"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Settings"
                android:tint="@color/text_primary" />

        </LinearLayout>

        <!-- Content Area -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Welcome Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_subtitle"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:paddingBottom="24dp" />

                <!-- Room Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:useDefaultMargins="true">

                    <!-- Room 1: Mobile Apps -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_mobile_apps"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/room_icon_bg"
                                android:backgroundTint="@color/room_mobile_apps">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="ðŸ“±"
                                    android:textSize="24sp"
                                    android:gravity="center" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_mobile_apps"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingTop="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_mobile_apps_desc"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Room 2: Web Dev -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_web_dev"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/room_icon_bg"
                                android:backgroundTint="@color/room_web_dev">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="ðŸŒ"
                                    android:textSize="24sp"
                                    android:gravity="center" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_web_dev"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingTop="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_web_dev_desc"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Room 3: Terminal -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_terminal"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/room_icon_bg"
                                android:backgroundTint="@color/room_terminal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="ðŸ’»"
                                    android:textSize="24sp"
                                    android:gravity="center" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_terminal"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingTop="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_terminal_desc"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Room 4: Data Science -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_data_science"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/room_icon_bg"
                                android:backgroundTint="@color/room_data_science">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="ðŸ“Š"
                                    android:textSize="24sp"
                                    android:gravity="center" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_data_science"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingTop="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_data_science_desc"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Room 5: API Backend -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_api_backend"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/room_icon_bg"
                                android:backgroundTint="@color/room_api_backend">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="âš™ï¸"
                                    android:textSize="24sp"
                                    android:gravity="center" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_api_backend"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingTop="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_api_backend_desc"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Room 6: AI/ML -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ai_ml"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/room_icon_bg"
                                android:backgroundTint="@color/room_ai_ml">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="ðŸ¤–"
                                    android:textSize="24sp"
                                    android:gravity="center" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_ai_ml"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingTop="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/room_ai_ml_desc"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <!-- Recent Projects Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_recent_projects"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:paddingTop="32dp"
                    android:paddingBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recent_projects_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/no_recent_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_no_recent"
                    android:textColor="@color/text_disabled"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="visible" />

                <!-- Quick Access: Open Terminal -->
                <Button
                    android:id="@+id/btn_quick_terminal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="Open Claude Terminal"
                    android:textColor="@color/on_primary"
                    android:background="@drawable/btn_primary_rounded"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/surface"
        android:fitsSystemWindows="true">

        <!-- Drawer Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@color/primary"
            android:padding="16dp"
            android:gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/on_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drawer_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v3.0.0"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Drawer Menu Items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- Workspaces Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WORKSPACES"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/nav_mobile_apps"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ“±  Mobile Apps"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/nav_web_dev"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸŒ  Web Dev"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/nav_terminal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ’»  Terminal"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/nav_data_science"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ“Š  Data Science"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/nav_api_backend"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="âš™ï¸  API Backend"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/nav_ai_ml"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ¤–  AI/ML"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/divider" />

                <!-- Other Items -->
                <TextView
                    android:id="@+id/nav_settings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="âš™ï¸  Settings"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/nav_help"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="â“  Help"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/nav_about"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="â„¹ï¸  About"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
