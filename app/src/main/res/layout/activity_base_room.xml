<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/room_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/surface"
            android:elevation="4dp"
            app:titleTextColor="@color/text_primary"
            app:subtitleTextColor="@color/text_secondary" />

        <!-- Tab Bar (horizontal scrolling tabs for open files) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/surface_variant"
            android:scrollbars="none">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tab_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border" />

        <!-- Main workspace area (panels + content) -->
        <LinearLayout
            android:id="@+id/workspace_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Left Panel (File Tree) -->
            <LinearLayout
                android:id="@+id/left_panel"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/surface">

                <!-- Panel Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:background="@color/surface_variant">

                    <TextView
                        android:id="@+id/left_panel_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Files"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_refresh_files"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_refresh"
                        android:contentDescription="Refresh"
                        android:tint="@color/text_secondary" />

                    <ImageButton
                        android:id="@+id/btn_new_file"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_add"
                        android:contentDescription="New File"
                        android:tint="@color/text_secondary" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border" />

                <!-- File Tree -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/file_tree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- Resizer (Left) -->
            <View
                android:id="@+id/left_resizer"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/border" />

            <!-- Main Content Area -->
            <FrameLayout
                android:id="@+id/main_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background">

                <!-- Placeholder text when empty -->
                <TextView
                    android:id="@+id/content_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Select or create a file to start"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />
            </FrameLayout>

            <!-- Resizer (Right) -->
            <View
                android:id="@+id/right_resizer"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/border"
                android:visibility="gone" />

            <!-- Right Panel (Properties/Inspector) -->
            <LinearLayout
                android:id="@+id/right_panel"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/surface"
                android:visibility="gone">

                <!-- Panel Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:background="@color/surface_variant">

                    <TextView
                        android:id="@+id/right_panel_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Properties"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_close_right_panel"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close"
                        android:contentDescription="Close"
                        android:tint="@color/text_secondary" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border" />

                <!-- Properties Content -->
                <ScrollView
                    android:id="@+id/properties_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/properties_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Panel Resizer -->
        <View
            android:id="@+id/bottom_resizer"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/border" />

        <!-- Bottom Panel (Console/Output) -->
        <LinearLayout
            android:id="@+id/bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@color/surface">

            <!-- Bottom Panel Header with tabs -->
            <LinearLayout
                android:id="@+id/bottom_panel_header"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:background="@color/surface_variant"
                android:gravity="center_vertical">

                <!-- Console Tab -->
                <TextView
                    android:id="@+id/tab_console"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="12dp"
                    android:gravity="center"
                    android:text="Console"
                    android:textColor="@color/primary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@color/surface" />

                <!-- Output Tab -->
                <TextView
                    android:id="@+id/tab_output"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="12dp"
                    android:gravity="center"
                    android:text="Output"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

                <!-- Problems Tab -->
                <TextView
                    android:id="@+id/tab_problems"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="12dp"
                    android:gravity="center"
                    android:text="Problems"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <!-- Clear Button -->
                <ImageButton
                    android:id="@+id/btn_clear_console"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_clear"
                    android:contentDescription="Clear"
                    android:tint="@color/text_secondary" />

                <!-- Collapse Button -->
                <ImageButton
                    android:id="@+id/btn_collapse_panel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_collapse"
                    android:contentDescription="Collapse"
                    android:tint="@color/text_secondary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <!-- Console Output -->
            <ScrollView
                android:id="@+id/console_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/console_output"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="monospace"
                    android:textSize="11sp"
                    android:textColor="@color/text_primary"
                    android:background="@color/console_background"
                    android:scrollbars="vertical" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/room_nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/surface"
        app:headerLayout="@layout/drawer_header_room"
        app:menu="@menu/drawer_room_menu"
        app:itemTextColor="@color/text_primary"
        app:itemIconTint="@color/text_secondary" />

</androidx.drawerlayout.widget.DrawerLayout>
